{
  "name": "timeismoneycc",
  "version": "1.0.0",
  "description": "Time Is Money browser extension for converting prices to work hours",
  "scripts": {
    "test": "jest",
    "lint": "eslint scripts.js",
    "lint:css": "stylelint styles.css",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:all": "npm run lint && npm run lint:css && npm run format:check",
    "prepare": "pre-commit install",
    "pre-commit": "pre-commit run --all",
    "pre-commit:install-hooks": "pre-commit install --install-hooks --hook-type pre-commit --hook-type commit-msg",
    "commitlint": "commitlint --edit",
    "security-scan": "pre-commit run detect-private-key --all-files && pre-commit run detect-aws-credentials --all-files && pre-commit run gitleaks --all-files"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phaedrus/timeismoneycc.git"
  },
  "keywords": [
    "chrome-extension",
    "money",
    "time",
    "conversion"
  ],
  "author": "phaedrus",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "git-secrets": "^0.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.5.3",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "pre-commit": [
    "lint",
    "lint:css",
    "test"
  ]
}
